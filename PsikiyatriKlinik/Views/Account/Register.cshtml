@model PsikiyatriKlinik.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Register - Psikiyatri Klinik</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Create Account</h3>
                                </div>
                                <div class="card-body">
                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                                    }
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                                    }

                                    <form asp-action="Register" asp-controller="Account" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Ad" placeholder="First Name" />
                                            <label for="Ad">First Name</label>
                                            <span asp-validation-for="Ad" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Soyad" placeholder="Last Name" />
                                            <label for="Soyad">Last Name</label>
                                            <span asp-validation-for="Soyad" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Email" placeholder="Email" />
                                            <label for="Email">Email</label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Telefon" placeholder="Phone Number" />
                                            <label for="Telefon">Phone Number</label>
                                            <span asp-validation-for="Telefon" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <select class="form-control" asp-for="Cinsiyet">
                                                <option value="">Select Gender</option>
                                                <option value="Erkek">Erkek</option>
                                                <option value="Kadın">Kadın</option>
                                                <option value="Diğer">Diğer</option>
                                            </select>
                                            <label for="Cinsiyet">Gender</label>
                                            <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <select class="form-control" asp-for="KullaniciTipi">
                                                <option value="">Select User Type</option>
                                                <option value="Hasta">Hasta</option>
                                                <option value="Doktor">Doktor</option>
                                                @* <option value="Admin">Admin</option> *@
                                            </select>
                                            <label for="KullaniciTipi">User Type</label>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Sifre" placeholder="Password" type="password" />
                                            <label for="Sifre">Password</label>
                                            <span asp-validation-for="Sifre" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" />
                                            <label for="ConfirmPassword">Confirm Password</label>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <div class="mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary btn-block">Create Account</button>
                                        </div>
                                    </form>

                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="Login">Already have an account? Go to login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>
