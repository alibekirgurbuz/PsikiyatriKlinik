@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

@model PsikiyatriKlinik.Models.DoktorProfileViewModel

<div class="container mt-5">
    <h3>Kişisel Bilgilerim</h3>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <form asp-action="Profil" asp-controller="Doktor" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Ad" placeholder="Ad" />
            <label asp-for="Ad">Ad</label>
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Soyad" placeholder="Soyad" />
            <label asp-for="Soyad">Soyad</label>
            <span asp-validation-for="Soyad" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Email" placeholder="E-posta" />
            <label asp-for="Email">E-posta</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Telefon" placeholder="Telefon" />
            <label asp-for="Telefon">Telefon</label>
            <span asp-validation-for="Telefon" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="UzmanlikAlani" placeholder="Uzmanlık Alanı" />
            <label asp-for="UzmanlikAlani">Uzmanlık Alanı</label>
            <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="SicilNo" placeholder="Sicil No" />
            <label asp-for="SicilNo">Sicil No</label>
            <span asp-validation-for="SicilNo" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="KlinikAd" placeholder="Klinik Adı" />
            <label asp-for="KlinikAd">Klinik Adı</label>
            <span asp-validation-for="KlinikAd" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <textarea class="form-control" asp-for="Adres" placeholder="Adres" style="height: 100px"></textarea>
            <label asp-for="Adres">Adres</label>
            <span asp-validation-for="Adres" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

