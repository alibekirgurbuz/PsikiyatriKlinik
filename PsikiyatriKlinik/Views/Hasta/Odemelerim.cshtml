@{
    ViewData["Title"] = "Odemelerim";
    Layout = "~/Views/Shared/_HastaLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Ödemelerim</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-credit-card me-1"></i>
            Ödeme Geçmişi
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>İşlem No</th>
                        <th>Tutar</th>
                        <th>Ödeme Türü</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>15.03.2024</td>
                        <td>#12345</td>
                        <td>500 TL</td>
                        <td>Kredi Kartı</td>
                        <td><span class="badge bg-success">Tamamlandı</span></td>
                        <td>
                            <button class="btn btn-info btn-sm">Detay</button>
                            <button class="btn btn-primary btn-sm">Fatura</button>
                        </td>
                    </tr>
                    <tr>
                        <td>01.03.2024</td>
                        <td>#12344</td>
                        <td>500 TL</td>
                        <td>Nakit</td>
                        <td><span class="badge bg-success">Tamamlandı</span></td>
                        <td>
                            <button class="btn btn-info btn-sm">Detay</button>
                            <button class="btn btn-primary btn-sm">Fatura</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-wallet me-1"></i>
            Ödeme Yap
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Tutar</label>
                        <input type="number" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Ödeme Türü</label>
                        <select class="form-select">
                            <option>Kredi Kartı</option>
                            <option>Nakit</option>
                            <option>Havale/EFT</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Ödeme Yap</button>
            </form>
        </div>
    </div>
</div>

